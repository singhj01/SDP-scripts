{
  "name": "controller",
  "vendor": "JAS",
  "version": "docker",
  "vld": [{
    "name": "sdpNetwork"
  }],
  "vnfd": [
    {
      "name":"controller",
      "vendor":"FOKUS",
      "version":"docker",
      "deployment_flavour":[
        {
          "flavour_key":"m1.small"
        }
