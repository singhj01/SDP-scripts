    },
    {
      "name":"gateway",
      "vendor":"JAS",
      "version":"docker",
      "vdu":[
        {
          "vm_image":["gateway:latest"],
          "scale_in_out":3,
          "vnfc":[
        {
          "connection_point":[
            {
              "virtual_link_reference":"sdpNetwork"
            }
          ]
        }
          ]
        }
      ],
      "deployment_flavour":[
        {
          "flavour_key":"m1.small"
        }
      ],
      "virtual_link":[
        {
           "name":"sdpNetwork"
        }
      ],
      "requires": {
        "controller": {
            "parameters":["hostname"]
      	}
      },
      "type":"client",
      "endpoint":"docker"
    }
  ]
